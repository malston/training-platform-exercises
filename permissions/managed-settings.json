{
  "$schema": "https://docs.anthropic.com/claude-code/managed-settings.schema.json",
  "permissions": {
    "allow": [],
    "deny": [
      "Bash(sudo *)",
      "Bash(rm -rf /)",
      "Bash(curl * | bash)",
      "Bash(git push --force *)",
      "Edit(//etc/*)",
      "Read(//etc/shadow)"
    ]
  },
  "disableBypassPermissionsMode": true,
  "allowManagedPermissionRulesOnly": false
}
